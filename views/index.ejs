<!DOCTYPE html>
<html ng-app="VimeoApp">
<head>
  <title>Vimeo Responsibly</title>
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/normalize.css">
  <link rel="stylesheet" href="/styles/skeleton.css">
  <link rel="stylesheet" href="/styles/loader.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/styles/style.css">
  <script src="/jquery/dist/jquery.js"></script>
  <script src="/angular/angular.js"></script>
  <script src="/controllers/angular_app.js"></script>
  <script src="/controllers/category_controller.js"></script>
</head>
<body>

<header>
  <img src="/images/VO.png">
  <h3> Curated videos for busy people, like you.</h3>
</header>

 <div class="container" ng-controller="CategoryController as videos">
  <div class="selector">   
    <form id="cat">
    <div class="row">
      <div class="row">
        <div class="six columns">
        <h5> PICK A CATEGORY </h5>
          <label id="lady-one" class="button" for="music"><i class="fa fa-2x fa-headphones"></i><p>music</p></label>
          <input id="music" type="radio" name="category" value="/categories/music/videos">

          <label id="lady-two" class="button" for="documentary"><i class="fa fa-video-camera fa-2x"></i><p>documentary</p></label>
          <input id="documentary"type="radio" name="category" value="/categories/documentary/videos">

          <label id="lady-three" class="button"for="animation"><i class="fa fa-magic fa-2x"></i><p>animation</p></label>
          <input id="animation" type="radio" name="category" value="/categories/animation/videos">
        </div>
        <div class="six columns">
          <h5> HOW MUCH TIME CAN YOU SPARE?</h5>
  <!--         <input id="time" type="text">  
          <button id="submit">submit</button> -->
          <h5>
            <i ng-click="videos.time()" id="plus" class="fa fa-plus-circle"></i><br>
            <input ng-model="videos.minutes" type="text" readonly><br>
            <i ng-click="videos.minus()" id="minus"class="fa fa-minus-circle"></i>
          </h5>

        </div>
      </div>

      <div class="row">
        <div class="six columns">
          <label id="lady-four" class="button" for="experimental"><i class="fa fa-gears fa-2x"></i><p>experimental</p></label>
          <input id="experimental" type="radio" name="category" value="/categories/experimental/videos">

          <label id="lady-five" class="button" for="random"><i class="fa fa-trophy fa-2x"></i><p>Random</p></label>
          <input id="random" type="radio" name="category" value="/channels/staffpicks/videos">

          <label id="lady-six" class="button" for="narrative"><i class="fa fa-map-o fa-2x"></i><p>narrative</p></label>
          <input id="narrative" type="radio" name="category" value="/categories/narrative/videos">
        </div>
      </div>

      <div class="row">
        <div class="six columns">
          <label id="lady-seven" class="button" for="travel"><i class="fa fa-plane fa-2x"></i><p>travel</p></label>
          <input id="travel" type="radio" name="category" value="/categories/travel/videos">

          <label id="lady-eight" class="button" for="comedy"><i class="fa fa-smile-o fa-2x"></i><p>comedy</p></label>
          <input id="comedy" type="radio" name="category" value="/categories/comedy/videos">

          <label id="lady-nine" class="button" for="sports"><i class="fa fa-futbol-o fa-2x"></i><p>sports</p></label>
          <input id="sports" type="radio" name="category" value="/categories/sports/videos">
        </div>
      </div>
    </form>
    </div>
  </div> <!-- .selector -->

  <div id="loader" class="loader">
  </div>

    <div id="playlist" ng-repeat="video in videos.newList"> 
      {{video.name}}
      <div class="player" ng-bind-html="video.embed.html"></div>
    </div> <!-- #playlist -->

</div> <!-- .container -->

</body>
</html>